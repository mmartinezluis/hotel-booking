<h1>My Reservations</h1>

<% if @reservations.empty? %>
  <h3>It seems you haven't booked any reservations yet :)</h3>
<% else %>
  <% if upcoming_reservations? %>
    <p>Upcoming:</p><br>
    <% User.first.upcoming_reservations.each do |reservation| %>
      <h2><%= link_to reservation.hotel.name, reservation_path(reservation) %></h2>
      <p><%= reservation.hotel.city.code %></p>
      <%= render 'reservations/info', :reservation => reservation %>
    <% end %><br>
  <% end %>
  <% if previous_reservations? %>
    <p>Previous:</p><br>
    <% User.first.previous_reservations.each do |reservation| %>
      <h2><%= link_to reservation.hotel.name, reservation_path(reservation) %></h2>
      <p><%= reservation.hotel.city.code %></p>
      <%= render 'reservations/info', :reservation => reservation %>
    <% end %>
  <% end %>
<% end %>

