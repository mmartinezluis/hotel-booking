<!DOCTYPE html>
<html>
  <head>
    <title>RailsProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  </head>

  <body>
    <% if session[:user_id] %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-link active" aria-current="page" href="/hotels">Dashboard</a>
              <a class="nav-link active" aria-current="page" href="/hotels">Hotel Search</a>
              <a class="nav-link active" aria-current="page" href="/users/<%= @user.id %>/hotels">Hotels</a>
              <a class="nav-link active" aria-current="page" href="/reservations">Reservations <%= ((@user.upcoming_reservations.length)) if @user.upcoming_reservations != [] %></a>
              <a class="nav-link active" aria-current="page" href="/cities">Cities</a>
              <a class="nav-link active" aria-current="page" href="/reviews">Reviews</a>
              <a class="nav-link active" aria-current="page" href="/hotels">Trending</a>
              <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <div id="main">
      <%= yield %>
    </div>

  </body>

