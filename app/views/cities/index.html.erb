<div class="view index">
<%= render partial: 'messages/msg' %>

  <h1>Cities Visited</h1>

  <% if @user.cities.blank? %>
    <p>You haven't visited any cities yet<p>
  <% else %>
    <ul>
      <% @user.cities.distinct.each do |city| %>
        <li>
          <%= link_to city.code, city_hotels_path(city.id) %>
        </li><br>
      <% end %>
    </ul>
  <% end %>
</div>
    