<div class="view index">
<%= render partial: 'messages/msg' %>

  <h1>My Cities</h1>
  <br>
  <% if @cities.blank? %>
    <p>You haven't visited any cities yet<p>
  <% else %>
    <ul>
      <% @cities.each do |city| %>
        <li>
         <h5><%= link_to city.name.titleize, city_hotels_path(city.id) %></h5>
        </li><br>
      <% end %>
    </ul>
  <% end %>
</div>
    