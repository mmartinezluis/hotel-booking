<div class"view" id="index">
<div>
<%= form_with url: "/", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>
</div>

<div class="msg">
  <% if flash[:msg] %>
    <%= flash[:msg] %>
  <% end %>
</div>

<div class="series" id="hotels" >
  <% if @hotels %>
    <ul>
      <% @hotels.each do |hotel| %>
        <a href="/<%= hotel.hotelId %>">
          <li>
            <%= hotel.name %>
          </li>
        </a>
      <% end %>
    </ul>
  <% end %>
</div>
  
</div>