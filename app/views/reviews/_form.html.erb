<%= form_for @review do |f| %>
  <%= f.text_field :reservation_id, type: :hidden %>
  <%= reservation_id_field(@review) %><br>
  <%= f.label 'Review description:' %><br>
  <%= f.text_area :description %><br>
  <%= f.submit %>
<% end %><br>
<% if @nested_reservation %>
  <%= button_to 'Cancel', @review.id ? reservation_review_path(@nested_reservation, @review) : reviews_path  %>
<% end %>
